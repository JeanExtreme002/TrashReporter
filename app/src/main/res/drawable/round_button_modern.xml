<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <gradient
                android:startColor="#BDBDBD"
                android:endColor="#9E9E9E"
                android:angle="135"
                android:type="linear" />
            <stroke 
                android:width="3dp" 
                android:color="?attr/colorOnBackground" />
            <size
                android:width="200dp"
                android:height="200dp" />
        </shape>
    </item>
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/button_primary_dark_gradient_start"
                android:endColor="@color/button_primary_dark_gradient_end"
                android:angle="135"
                android:type="linear" />
            <stroke 
                android:width="4dp" 
                android:color="?attr/colorOnBackground" />
            <size
                android:width="200dp"
                android:height="200dp" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/button_primary_gradient_start"
                android:endColor="@color/button_primary_gradient_end"
                android:angle="135"
                android:type="linear" />
            <stroke 
                android:width="4dp" 
                android:color="?attr/colorOnBackground" />
            <size
                android:width="200dp"
                android:height="200dp" />
        </shape>
    </item>
</selector>
