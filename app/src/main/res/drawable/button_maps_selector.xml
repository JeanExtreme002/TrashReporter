<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#3367D6"
                android:endColor="#1557B0"
                android:angle="135" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="1dp" 
                android:color="#1A73E8" />
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4285F4"
                android:endColor="#1A73E8"
                android:angle="135" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="1dp" 
                android:color="#3367D6" />
        </shape>
    </item>
    
</selector>
