<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/button_primary_dark_gradient_start"
                android:endColor="@color/button_primary_dark_gradient_end"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/accent_orange" />
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/button_primary_gradient_start"
                android:endColor="@color/button_primary_gradient_end"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/accent_orange" />
        </shape>
    </item>
    
</selector>
